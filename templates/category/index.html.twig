{% extends 'base.html.twig' %}

{% block title %}Toutes les catégories{% endblock %}

{% block body %}
<h1>Toutes les catégories :</h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / 
                <a href="{{ path('category_show', { categoryName:category.name }) }}">
                {{ category.name }}
                </a>
            </h2>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

{% endblock %}
